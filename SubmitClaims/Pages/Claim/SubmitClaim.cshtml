@model SubmitClaims.Models.LecturerClaim

<h2>Submit Claim</h2>

<form asp-action="SubmitClaim" enctype="multipart/form-data" method="post">
    <div>
        <label>Hours Worked:</label>
        <input asp-for="HoursWorked" type="number" required />
    </div>
    <div>
        <label>Hourly Rate:</label>
        <input asp-for="HourlyRate" type="number" required />
    </div>
    <div>
        <label>Additional Notes:</label>
        <textarea asp-for="AdditionalNotes"></textarea>
    </div>
    <div>
        <label>Upload Document:</label>
        <input type="file" name="uploadedFile" />
        <small>Allowed types: .pdf, .docx, .xlsx (Max size: 5MB)</small>
    </div>
    <button type="submit">Submit</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}